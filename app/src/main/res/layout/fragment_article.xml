<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/left_article"
        android:id="@+id/iv_jian"
        android:layout_below="@+id/iv_ying"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/left_offline"
        android:id="@+id/iv_ying"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/left_search"
        android:id="@+id/iv_bian"
        android:layout_alignTop="@+id/iv_ying"
        android:layout_toLeftOf="@+id/iv_jian"
        android:layout_toStartOf="@+id/iv_jian"
        android:layout_marginTop="36dp" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/left_setting"
        android:id="@+id/iv_shu"
        android:layout_above="@+id/iv_ke"
        android:layout_toStartOf="@+id/iv_jian" />

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/left_topic"
        android:id="@+id/iv_ke"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/iv_jian"
        android:layout_alignStart="@+id/iv_bian"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/left_article_hot"
        android:id="@+id/iv_she"
        android:layout_alignBottom="@+id/iv_bian"
        android:layout_toEndOf="@+id/iv_jian" />

    <ImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:src="@drawable/left_search"
        android:id="@+id/iv_chan"
        android:layout_alignTop="@+id/iv_shu"
        android:layout_alignStart="@+id/iv_she"
        android:layout_marginStart="14dp" />

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@drawable/left_article"
        android:id="@+id/iv_chang"
        android:layout_marginStart="19dp"
        android:layout_alignTop="@+id/iv_ke"
        android:layout_toEndOf="@+id/iv_ke" />

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="275dp"
        android:background="@color/green"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/iv_ke"
        android:layout_alignStart="@+id/iv_shu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:text="智能推荐，从登陆开始！" />
    </LinearLayout>


</RelativeLayout>