<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/line" />

    <!--推荐-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView

            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_article"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_article" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_article"
            android:layout_toEndOf="@+id/left_article" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <!--发现-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_article_hot"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_article_hot"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_article_hot"
            android:layout_toEndOf="@+id/left_article_hot" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <!--主题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_topic"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_topic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_topic"
            android:layout_toEndOf="@+id/left_topic" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <!--站点-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_site"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_site" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站点"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_site"
            android:layout_toEndOf="@+id/left_site" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <!--搜索-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_search"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_search"
            android:layout_toEndOf="@+id/left_search" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <!--离线-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_offline"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_offline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_offline"
            android:layout_toEndOf="@+id/left_offline" />
    </RelativeLayout>

    <include layout="@layout/line" />

    <!--设置-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/left_setting"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/left_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left_setting"
            android:layout_toEndOf="@+id/left_setting" />
    </RelativeLayout>

    <include layout="@layout/line" />

</LinearLayout>